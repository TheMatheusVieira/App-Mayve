{
  "expo": {
    "name": "MayveApp",
    "slug": "MayveApp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/Carregamento.jpg",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Allow MayveApp to access your camera",
        "NSMicrophoneUsageDescription": "Allow MayveApp to access your microphone"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/Carregamento.jpg",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/Carregamento.jpg"
    },
    "plugins": [
      "expo-font",
      "expo-video",
      "expo-camera"
    ]
  }
}
